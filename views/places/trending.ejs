<style>
  .search{
    width: 90%;
  }

  @media (min-width: 768px) {
    .search{
      width: 70%;
    }
  }

  @media (min-width: 992px) {
    .search {
      width: 50%;
    }
  }
</style>

<% layout('./layouts/boilerplate') %>
  <div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh;">
    <br><br>
    <h2>Trending Places üî•</h2>
    <br>
    <ul class="w-100 px-3">
      <% for(let c of campgrounds) { %>
        <div class="card mb-3 mx-auto">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img alt="" src="<%= c.images[0].url %>" style="object-fit: cover;width:100%;height:100%;">
            </div>
            <div class="col-md-8">
              <div class="card-body text-center">
                <h3 class="card-title">
                  <%= c.title %>
                </h3>
                <p class="card-text">
                  <%= c.description %>
                </p>
                <p class="card-text">
                ‚ù§Ô∏è <span id="like-count">
                    <%= c.likes.length %>
                      <%= c.likes.length===1 ? "like" : "likes" %>
                  </span>
                  <br>
                <i class="fas fa-eye"></i> <%= c.views %> views
                <br>
                  <small>Location : <%= c.location %></small>
                  <br>
                  <small>Author : <a href="/profile/<%=c.author.username%>">
                      <%= c.author.username %>
                    </a></small>
                </p>
                <a class="btn btn-primary" href="/places/<%= c._id %>">View <%= c.title %></a>
              </div>
            </div>
          </div>
        </div>
        <br>
        <% } %>
    </ul>
  </div>