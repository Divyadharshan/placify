<% if(success && success.length) {%>
<div class="alert alert-success alert-dismissible fade show" style="max-width: 50%; margin-top: 20px; margin-left: auto; margin-right: auto;" role="alert">
    <%= success %>
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %>

<% if(error && error.length) {%>
<div class="alert alert-danger alert-dismissible fade show" style="max-width: 50%; margin-top: 20px; margin-left: auto; margin-right: auto;" role="alert">
    <%= error %>
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %>
